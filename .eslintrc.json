{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "arrow-parens": ["error", "as-needed", { "requireForBlockBody": true }],
        "max-len": ["error", 160]
    }
}
